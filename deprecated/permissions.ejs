<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado Permisos</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
    <div class="contenedor">
        <div class="aside">
            <h2>Administrador</h2>
            <br>
            <ul class="categories">
                <li><a href="/categorias">Ver Categorias</a></li>
                <li><a href="/archivos">Ver Archivos</a></li>
                <li><a href="/permisos">Ver Archivos</a></li>
                <li><a href="#">Ver mas...</a></li>
            </ul>
        </div>
        <section>
            <div class="header">
                <h1>Adminsitrador de datos</h1>
            </div>
            <div class="main">
                <div class="title">
                    <h3>Permisos</h3>
                </div>
                <% if(permissions == undefined || permissions.length === 0) { %>
                    <h2>No hay permisos para mostrar...</h2>
                    <a href="/permisos/crear">Click aquí para crear un nueva permiso</a>
                <% }else{ %>
                <div class="data">
                <table class="table table-striped">
                    <thead>
                       <tr>
                        <th scope="col">#ID</th>
                        <th scope="col">Título</th>
                        <th scope="col">Acciones</th>
                      </tr>
                    </thead>
                    <tbody>
                     <% permissions.forEach(perm => { %>
                         <tr>
                           <th scope="row"><%= perm.id %></th>
                           <td><%= perm.title %></td>
                           <td>
                             <a href="/permisos/<%= perm.id %>" class="badge badge-primary"> Editar</a>
                             <a href="/permisos/<%= perm.id %>" class="badge badge-danger"> Borrar</a>
                           </td>
                         </tr>
                     <% }); %>   

                    </tbody>
                  </table>
                </div>
            <% } %>
            </div>
        </section>
        <div class="footer">

        </div>
    </div>
</body>
</html>