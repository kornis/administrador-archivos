<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado Archivos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="contenedor">
        <div class="aside">
          <h2><a href="/">Administrador</a></h2>
            <hr>
            <ul class="categories">
                <li><a href="/categorias">Ver Categorias</a></li>
                <li><a href="/archivos">Ver Archivos</a></li>
                <li><a href="#">Ver Permisos</a></li>
                <li><a href="#">Ver mas...</a></li>
            </ul>
        </div>
        <section>
            <div class="header">
                <h4>Dashboard</h4>
            </div>
            <hr>
            <div class="main">
                <div class="title">
                    <h3>Archivos top 5</h3>
                </div>
                <div class="data">
                  <% if(files == undefined || files.length === 0) { %>
                    <h2>No hay archivos para mostrar...</h2>
                    <a href="/archivos/subir">Click aquí para crear una nueva categoría</a>
                <% }else{ %>
                <div class="data">
                    <a href="/archivos/subir" class="btn btn-primary">Crear nuevo archivo</a>
                <table class="table table-striped">
                    <thead>
                       <tr>
                        <th scope="col">#ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Ruta</th>
                        <th scope="col">Acciones</th>
                      </tr>
                    </thead>
                    <tbody>
                     <% files.forEach(file => { %>
                         <tr>
                           <th scope="row"><%= file.id %></th>
                           <td><%= file.name %></td>
                           <td><%= file.path %></td>
                           <td>
                             <a href="/archivos/<%= file.id %>" class="badge badge-primary"> Editar</a>
                             <form action="/archivos/<%= file.id %>?_method=DELETE" method="POST" class="delete-button">
                                <button class="badge badge-danger">Borrar</button>
                            </form>
                           </td>
                         </tr>
                     <% }); %>   

                    </tbody>
                  </table>
                </div>
            <% } %>
                </div>

                <div class="title">
                  <h3>Categorías top 5</h3>
              </div>
              <% if(categories == undefined || categories.length === 0) { %>
                  <h2>No hay categorías para mostrar...</h2>
                  <a href="/categorias/crear">Click aquí para crear una nueva categoría</a>
              <% }else{ %>
              <div class="data">
                  <a href="/categorias/crear" class="btn btn-primary">Crear nueva categoría</a>
              <table class="table table-striped">
                  <thead>
                     <tr>
                      <th scope="col">#ID</th>
                      <th scope="col">Título</th>
                      <th scope="col">Cant. Archivos</th>
                      <th scope="col">Acciones</th>
                    </tr>
                  </thead>
                  <tbody>
                   <% categories.forEach(cat => { %>
                       <tr>
                         <th scope="row"><%= cat.id %></th>
                         <td><%= cat.title %></td>
                         <td><%= cat.Files.length %></td>
                         <td>
                           <a href="/categorias/<%= cat.id %>" class="badge badge-primary"> Editar</a>
                           <form action="/categorias/<%= cat.id %>?_method=DELETE" method="POST" class="delete-button">
                              <button class="badge badge-danger">Borrar</button>
                          </form>
                         </td>
                       </tr>
                   <% }); %>   

                  </tbody>
                </table>
              </div>
          <% } %>
            </div>
        </section>

    </div>
    <div class="footer">
      <p>Footer</p>
    </div>
</body>
</html>